
<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <%- include("../forms/authors") -%>
            </div>
        </div>
        <table class="table table-striped table-hover my-custom-scrollbar table-wrapper-scroll-y">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">Birthday</th>
                    <th scope="col">Address</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% author.data.forEach((item, index)=> { %>
                    <tr>
                        <th>
                            <%= index + 1 %>
                        </th>
                        <th>
                            <%= item.fullname %>
                        </th>
                        <td>
                            <%= item.date_of_birth %>
                        </td>
                        <td>
                            <%= item.address %>
                        </td>
                        <td>
                            <%= item.phonenumber %>
                        </td>
                        <td style="width: 220px; vertical-align: middle" class="text-center">
                            <button class="btn btn-outline-primary mr-1" type="button" data-bs-toggle="modal" data-bs-target="#modalUpdate<%= index %>">
                                <i class="bi bi-pencil-square"></i> Update</button>
                            <%- include('../forms/update_author', {index: index}) %>

                            <button class="btn btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Delete</button>
                        </td>
                    </tr>
                    <%}) %>

            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= author.pre == author.current ? 'disabled' : '' %>">
                    <a href="<%= `?page=${author.pre}` %>" class="page-link"
                        href="#">Previous</a>
                </li>
                <% for(let i=author.pre; i <=author.next; i++) { %>
                    <li class="page-item <%= i == author.current ? 'active' : '' %>">
                        <a href="<%= `?page=${i}` %>" class="page-link" href="#">
                            <%= i %>
                        </a>
                    </li>
                <% } %>
                        <li
                            class="page-item <%= author.next == author.current ? 'disabled' : '' %>">
                            <a href="<%= `?page=${author.next}` %>" class="page-link"
                                href="#">Next</a>
                        </li>
            </ul>
        </nav>

    </div>
</div>
                    