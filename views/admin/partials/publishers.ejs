<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col">
                <%- include("../forms/publishers") -%>
            </div>
        </div>
        <table class="table table-striped table-hover my-custom-scrollbar table-wrapper-scroll-y">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Fullname</th>
                    <th scope="col">Country</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% publisher.data.forEach((item, index)=> { %>
                    <tr>
                        <th>
                            <%= index + 1 %>
                        </th>
                        <th>
                            <%= item.fullname %>
                        </th>
                        <td>
                            <%= item.country %>
                        </td>
                        <td style="width: 220px; vertical-align: middle" class="text-center">
                            <button class="btn btn-outline-primary mr-1" type="button" data-bs-toggle="modal" data-bs-target="#modalUpdate<%= index %>">
                                <i class="bi bi-pencil-square"></i> Update</button>
                                <%- include('../forms/update_publisher', {index: index}) %>

                            <button class="btn btn-outline-danger">
                                <i class="bi bi-trash-fill"></i> Delete</button>
                        </td>
                    </tr>
                <%}) %>
            </tbody>
        </table>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li
                    class="page-item <%= publisher.pre == publisher.current ? 'disabled' : '' %>">
                    <a href="<%= `?page=${publisher.pre}` %>" class="page-link"
                        href="#">Previous</a>
                </li>
                <% for(let i=publisher.pre; i <=publisher.next; i++) { %>
                    <li class="page-item <%= i == publisher.current ? 'active' : '' %>">
                        <a href="<%= `?page=${i}` %>" class="page-link" href="#">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
                        <li
                            class="page-item <%= publisher.next == publisher.current ? 'disabled' : '' %>">
                            <a href="<%= `?page=${publisher.next}` %>" class="page-link"
                                href="#">Next</a>
                        </li>
            </ul>
        </nav>
    </div>
</div>
