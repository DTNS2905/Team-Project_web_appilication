<div class="card mt-3">
    <div class="card-body">
        <div class="row">
            <div class="col mb-2">
                <%- include("../forms/book") %>
            </div>
        </div>
        <div class="container-fluid">
            <table class="table table-striped table-hover my-custom-scrollbar table-wrapper-scroll-y">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col" class="text-center">Cover</th>
                        <th scope="col" class="text-center">Title</th>
                        <th scope="col" class="text-center">Genre</th>
                        <th scope="col" class="text-center">Price</th>
                        <th scope="col" class="text-center">Author</th>
                        <th scope="col" class="text-center">Publisher</th>
                        <th scope="col" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% book.data.forEach((bookInfo, index)=> { %>
                        <tr>
                            <th style="vertical-align: middle">
                                <%= index + 1 %>
                            </th>
                            <th style="vertical-align: middle" class="text-center">
                                <img height="150px" width="100px" style="object-fit: contain"
                                    src="<%= bookInfo.image %>" />
                            </th>
                            <th style="vertical-align: middle" class="text-center">
                                <%= bookInfo.title %>
                            </th>
                            <td style="vertical-align: middle" class="text-center">
                                <%= bookInfo.genreName %>
                            </td>
                            <td style="vertical-align: middle" class="text-center">
                                $<%= bookInfo.price %>
                            </td>
                            <td style="vertical-align: middle" class="text-center">
                                <%= bookInfo.authorName %>
                            </td>
                            <td style="vertical-align: middle" class="text-center">
                                <%= bookInfo.publisherName %>
                            </td>
                            <td style="width: 220px; vertical-align: middle" class="text-center">

                                <button class="btn btn-outline-primary mr-1" type="button" data-bs-toggle="modal"
                                    data-bs-target="#modalUpdate<%= index %>">
                                    <i class="bi bi-pencil-square"></i> Update</button>

                                <%- include("../forms/update_book" , {index: index }) %>

                                    <button class="btn btn-outline-danger" type="button" data-bs-toggle="modal"
                                        data-bs-target="#modalDelete<%= index %>">
                                        <i class="bi bi-trash-fill"></i> Delete</button>

                                    <%- include("../forms/delete_book" , {index: index }) %>

                            </td>
                        </tr>
                        <%}) %>

                </tbody>
            </table>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= book.pre == book.current ? 'disabled' : '' %>">
                    <a href="<%= `?page=${book.pre}` %>" class="page-link" href="#">Previous</a>
                </li>
                <% for(let i=book.pre; i <=book.next; i++) { %>
                    <li class="page-item <%= i == book.current ? 'active' : '' %>">
                        <a href="<%= `?page=${i}` %>" class="page-link" href="#">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
                        <li class="page-item <%= book.next == book.current ? 'disabled' : '' %>">
                            <a href="<%= `?page=${book.next}` %>" class="page-link" href="#">Next</a>
                        </li>
            </ul>
        </nav>

    </div>
</div>