<!-- Modal -->
<div class="modal fade" id="modalUpdate<%= index %>" tabindex="-1" aria-labelledby="modalUpdate<%= index %>" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="text-align: left;">
            <div class="modal-header">
                <h1 class="modal-title fs-5 " id="exampleModalLabel">Update Publisher</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" action="/admin/author/<%= author.data[index]._id %>" >
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label for="title" class="form-label">Fullname</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter Fullname" name="fullname"
                                required value="<%= author.data[index].fullname %>">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label for="description" class="form-label">Birthday</label>
                            <input type="date" class="form-control" id="title" placeholder="Enter Birthday" name="date_of_birth"
                                required value="<%= author.data[index].date_of_birth %>">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label for="title" class="form-label">Address</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter Address" name="address"
                                required value="<%= author.data[index].address %>">
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label for="title" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="title" placeholder="Enter Phone Number" name="phonenumber"
                                required value="<%= author.data[index].phonenumber %>">
                        </div>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
