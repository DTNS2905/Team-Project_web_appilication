	<script>
		function addCart(inputQuantityId = "inputQuantity", book_id, user_id, book_name, book_image, price) {
			quantity = document.getElementById(inputQuantityId)
			let inputQuantity = 1;
			if (quantity) {
				inputQuantity = parseInt(quantity.value)
			}
			const item_key = `${user_id}_${book_id}`
			const cart = localStorage.getItem("cart");
			if (cart) {
				try {
					let cartJson = JSON.parse(cart);
					if (cartJson[item_key]) {
						cartJson[item_key].quantity += inputQuantity;
					} else {
						cartJson[item_key] = {
							user_id: user_id,
							book_id: book_id,
							book_name: book_name,
							book_image: book_image,
							price: parseFloat(price),
							quantity: inputQuantity,
						}
					}
					localStorage.setItem("cart", JSON.stringify(cartJson));
					Swal.fire({
						title: "Success!",
						text: "Your book has been added to cart!",
						icon: "success",
						showConfirmButton: false,
						timer: 1500
					});
				} catch (err) {
					console.error(err)
				}
			} else {
				try {
					let data = {}
					data[item_key] = {
						user_id: user_id,
						book_id:book_id,
						book_name: book_name,
						book_image: book_image,
						price: parseFloat(price),
						quantity: inputQuantity
					}
					localStorage.setItem("cart", JSON.stringify(data));
					Swal.fire({
						title: "Good job!",
						text: "Your book has been added to cart!",
						icon: "success",
						showConfirmButton: false,
						timer: 1500
					});
				} catch (err) {
					console.error(err)
				}
			}
		}
	</script>

