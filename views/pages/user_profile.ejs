<style>
  button {
    background-image: none;
    background: var(--accent-color);
    text-decoration: none !important;
    display: inline-block;
    position: relative;
    border: 1px solid transparent;
    border-radius: 40px;
    padding: 0.75em 1.5em;
    margin-top: 15px;
    font-size: 15px;
    font-weight: bold;
    line-height: normal;
    text-align: center;
    text-transform: uppercase;
    color: #fff;
    z-index: 1;
    cursor: pointer;
    white-space: nowrap;
    vertical-align: middle;
    -webkit-transition: all 0.3s ease-in;
    transition: all 0.3s ease-in;
    -ms-touch-action: manipulation;
    touch-action: manipulation;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }

  .stellarnav>ul>li>a {
    padding: 10px 20px;
  }

  @media only screen and (max-width: 280px) {
    .right-element {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      align-content: center;
      align-items: center;
    }

    button {
      margin-right: 2rem;
    }
  }
</style>

<body style="background-color: #f3f2ec; padding: 0; margin: 0;">
  <div class="container p-5" style="background-color: gainsboro;
  border-radius: 20px; margin-top: 2rem;">
    <div class="row">
      <div class="col-md-12">
        <h1 style="text-align: center;">User Profile</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body text-center" style="margin-bottom: 0.5rem;">
            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
              class="rounded-circle img-fluid" style="width: 175.5px; background-color: cornflowerblue;">
            <h5 class="my-3">
              <%= users[0].fullname %>
            </h5>
            <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModalUpdate">
              Edit Profile
            </button>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalUpdate" tabindex="-1" role="dialog"
              aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content" style="background: transparent; border: 0px;">
                  <div class="modal-body" style="background-color: transparent; padding: 0;">
                    <form action="/users/profile/update/" class="decor" method="post" style="width: auto; margin: 0;">
                      <div class="form-left-decoration"></div>
                      <div class="form-right-decoration"></div>
                      <div class="circle"></div>
                      <div class="form-inner">
                        <input type="text" placeholder="Fullname" name="fullname" value="<%= users[0].fullname %>">
                        <input type="text" placeholder="Username" name="username" value="<%= users[0].username %>">
                        <select class="form-select" aria-label="Default select example" name="gender">
                          <option value="male" <%=users[0].gender==="male" ? 'selected' : '' %>>Male</option>
                          <option value="female" <%=users[0].gender==="female" ? 'selected' : '' %>>Female</option>
                          <option value="unknown" <%=users[0].gender==="unknown" ? 'selected' : '' %>>Unknown</option>
                        </select>
                        <input type="email" placeholder="Email" name="email" value="<%= users[0].email %>">
                        <input type="text" placeholder="Phone" name="phonenumber" value="<%= users[0].phonenumber %>">
                        <input type="text" placeholder="Address" name="address" value="<%= users[0].address %>">

                        <button type="submit">Save Changes</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">Full Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">
                <%= users[0].fullname %>
              </p>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <p class="mb-0">User Name</p>
            </div>
            <div class="col-sm-9">
              <p class="text-muted mb-0">
